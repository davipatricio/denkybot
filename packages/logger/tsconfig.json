{
	"extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "../",
        "paths": {
            "@bot": [
                "./bot"
            ],
            "@bot/*": [
                "./bot/*"
            ],
            "@locales": [
                "./locales"
            ],
            "@locales/*": [
                "./locales/*"
            ],
            "@webserver": [
                "./webserver"
            ],
            "@webserver/*": [
                "./webserver/*"
            ],
            "@logger": [
                "./logger"
            ],
            "@logger/*": [
                "./logger/*"
            ],
            "@prisma-client": [
                "../node_modules/.prisma/client"
            ],
            "#apis/*": [
                "./bot/src/lib/apis/*"
            ],
            "#types/*": [
                "./bot/src/types/*"
            ],
            "#lib/*": [
                "./bot/src/lib/*"
            ],
            "#helpers/*": [
                "./bot/src/helpers/*"
            ],
            "#structures/*": [
                "./bot/src/structures/*"
            ]
        },
    },
	"include": [
		"src/**/*.ts",
        "package.json",
        ".env",
        "yarn.lock"
	],
	"exclude": [
		"tsconfig.json"
	]
}