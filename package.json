{
  "name": "denkybot",
  "version": "1.0.0-rc4",
  "description": "Denky is a multipurpose Discord bot used in +3000 servers. Built with Node.js, TypeScript and discord.js.",
  "main": "./build/sharding/shard.js",
  "private": true,
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/denkylabs/denkybot.git"
  },
  "bugs": {
    "url": "https://github.com/denkylabs/denkybot/issues"
  },
  "homepage": "https://github.com/denkylabs/denkybot#readme",
  "scripts": {
    "build": "npx sucrase ./src -d ./build --esModuleInterop --transforms typescript,imports",
    "build:check": "yarn types:check && yarn build",
    "types:check": "npx tsc --noEmit --incremental false",
    "start": "cd ./build && node sharding/shard.js",
    "lint": "npx eslint src",
    "lint:fix": "yarn lint:prettier && npx eslint src --fix",
    "lint:prettier": "npx prettier -w src",
    "generate:cockroachdb": "prisma generate --schema=./src/prisma/cockroachdb.prisma",
    "generate:postgres": "prisma generate --schema=./src/prisma/postgres.prisma",
    "generate:mongodb": "prisma generate --schema=./src/prisma/mongodb.prisma",
    "migrate:pg": "prisma migrate dev --schema=./src/prisma/postgres.prisma",
    "migrate:pg:create": "prisma migrate dev --name production --schema=./src/prisma/postgres.prisma --create-only",
    "migrate:cr": "prisma migrate dev --schema=./src/prisma/cockroachdb.prisma",
    "migrate:cr:create": "prisma migrate dev --name production --schema=./src/prisma/cockroachdb.prisma --create-only"
  },
  "keywords": [],
  "author": "Davi Patricio <veric@denkylabs.com>",
  "contributors": [
    "Nicolas Ribeiro <niskii@denkylabs.com>",
    "Weariful <guiguifeuser@gmail.com>"
  ],
  "license": "GPL-3.0 license",
  "devDependencies": {
    "@types/ioredis": "4.28.10",
    "@types/node": "18.0.1",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "@typescript-eslint/parser": "5.30.6",
    "eslint": "8.19.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.7.1",
    "prisma": "4.0.0",
    "sucrase": "3.23.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@prisma/client": "4.0.0",
    "@sentry/node": "7.6.0",
    "dayjs": "1.11.3",
    "discord.js": "14.0.0-dev.1657325401-33ae7df",
    "dotenv": "16.0.1",
    "fastify": "4.2.0",
    "ioredis": "5.1.0",
    "ms": "2.1.3",
    "prisma-redis-middleware": "4.0.6",
    "tslib": "2.4.0",
    "tweetnacl": "1.0.3",
    "undici": "5.6.1",
    "winston": "3.8.1",
    "winston-transport": "4.5.0"
  }
}
